{% comment %}
  Renders share button.
  Accepts:
  - block: {Object} passes in the block information.
  - share_link: {String} url to be added to the input the user will get/copy.

  Usage:
  {% render 'share-button',
    block: block,
    share_link: share_url
  %}
{% endcomment %}
<script src="{{ 'share.js' | asset_url }}" defer="defer"></script>

<share-button id="Share-{{ section.id }}" class="share-button quick-add-hidden" {{ block.shopify_attributes }}>
  <button class="share-button__button hidden">
    {{ block.settings.share_label | escape }}
  </button>
  <details id="Details-{{ block.id }}-{{ section.id }}">
    <summary class="share-button__button">
      {{ block.settings.share_label | escape }}
    </summary>
    <div class="share-button__fallback motion-reduce">
      <div class="field">
        <span id="ShareMessage-{{ section.id }}" class="share-button__message hidden" role="status"> </span>
        <input
          type="text"
          class="field__input"
          id="ShareUrl-{{ section.id }}"
          value="{{ share_link }}"
          placeholder="{{ 'general.share.share_url' | t }}"
          onclick="this.select();"
          readonly
        >
        <label class="field__label" for="ShareUrl-{{ section.id }}">{{ 'general.share.share_url' | t }}</label>
      </div>
      <button class="share-button__close hidden">
        <span class="svg-wrapper">
          {{- 'icon-close.svg' | inline_asset_content -}}
        </span>
        <span class="visually-hidden">{{ 'general.share.close' | t }}</span>
      </button>
      <button class="share-button__copy">
        <span class="svg-wrapper">
          {{- 'icon-copy.svg' | inline_asset_content -}}
        </span>
        <span class="visually-hidden">{{ 'general.share.copy_to_clipboard' | t }}</span>
      </button>
    </div>
  </details>
</share-button>

<!-- Social Share Buttons -->
      <div class="social-share-buttons" style="margin-top: 10px;">  
        <!-- Facebook Share Button -->
        <a 
          href="https://www.facebook.com/sharer/sharer.php?u={{ share_link | url_encode }}" 
          target="_blank" 
          class="share-button__facebook"
          style="text-decoration: none; "
        >
          <span class="svg-wrapper">
            <!-- Assuming you have a Facebook icon file -->
            {{- 'icon-fb.svg' | inline_asset_content -}}
          </span>
          <span class="visually-hidden">Share on Facebook</span>
        </a>
        <!-- Messenger Share Button -->
        <a 
          href="fb-messenger://share?link={{ share_link | url_encode }}" 
          target="_blank" 
          class="share-button__messenger"
          style="text-decoration: none; "
        >
          <span class="svg-wrapper">
            <!-- Assuming you have a Messenger icon file -->
            {{- 'icon-mess.svg' | inline_asset_content -}}
          </span>
          <span class="visually-hidden">Share on Messenger</span>
        </a>
        <!-- Email Share Button -->
        <a 
          href="mailto:?subject={{ 'Email share' | default: 'Check this out' }}&body={{ share_link | url_encode }}" 
          class="share-button__email"
          style="text-decoration: none;"
        >
          <span class="svg-wrapper">
            <!-- Assuming you have an Email icon file -->
            {{- 'icon-mail.svg' | inline_asset_content -}}
          </span>
          <span class="visually-hidden">Share via Email</span>
        </a>
     
</div>